{
  "oneOf": [
    { "$ref": "#/$defs/number" },
    { "$ref": "#/$defs/token" },
    { "$ref": "#/$defs/dimension" },
    { "$ref": "#/$defs/typography" },
    { "$ref": "#/$defs/fontFamily" },
    { "$ref": "#/$defs/fontWeight" },
    { "$ref": "./dtcm.schema.json" },
    { "$ref": "#/$defs/reference" },
    {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "$ref": "#" }
    }
  ],

  "$defs": {
    "number": {
      "type": "object",
      "properties": {
        "$type": { "const": "number" },
        "$value": { "type": "number" },
        "$description": { "type": "string" }
      },
      "required": ["$type", "$value"],
      "additionalProperties": false
    },
    "token": {
      "type": "object",
      "properties": {
        "$type": { "const": "token" },
        "$value": { "type": "string" },
        "$description": { "type": "string" }
      },
      "required": ["$type", "$value"],
      "additionalProperties": false
    },
    "dimension": {
      "type": "object",
      "properties": {
        "$type": { "const": "dimension" },
        "$value": { "$ref": "#/$defs/dimension-value" },
        "$description": { "type": "string" }
      },
      "required": ["$type", "$value"],
      "additionalProperties": false
    },
    "typography": {
      "type": "object",
      "properties": {
        "$type": { "const": "typography/token" },
        "$value": {
          "type": "object",
          "properties": {
            "fontFamily": { "type": "string" },
            "fontSize": { "type": "string" },
            "fontWeight": { "type": "string" },
            "letterSpacing": { "type": "string" },
            "lineHeight": { "type": "string" }
          },
          "required": [
            "fontFamily",
            "fontSize",
            "fontWeight",
            "letterSpacing",
            "lineHeight"
          ],
          "additionalProperties": false
        }
      },
      "required": ["$type", "$value"],
      "additionalProperties": false
    },
    "dimension-value": {
      "type": "object",
      "properties": {
        "value": { "type": "number" },
        "unit": { "enum": ["px", "rem", "dp"] }
      },
      "required": ["value", "unit"]
    },
    "fontFamily": {
      "type": "object",
      "properties": {
        "$type": { "const": "fontFamily" },
        "$value": { "type": "string" },
        "$description": { "type": "string" }
      },
      "required": ["$type", "$value"],
      "additionalProperties": false
    },
    "fontWeight": {
      "type": "object",
      "properties": {
        "$type": { "const": "fontWeight" },
        "$value": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        },
        "$description": { "type": "string" }
      },
      "required": ["$type", "$value"],
      "additionalProperties": false
    },
    "reference": {
      "type": "object",
      "properties": {
        "$value": { "type": "string", "pattern": "^{.*}$" },
        "$description": { "type": "string" }
      },
      "required": ["$value"],
      "additionalProperties": false
    }
  }
}
